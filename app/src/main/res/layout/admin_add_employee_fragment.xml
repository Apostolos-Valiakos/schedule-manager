<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/adminAddEmployeeFragmentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/adminAddEmployeeFragmentText"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/firstNameAdminEditEmployees"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="16dp"
            android:autofillHints="@string/firstNameAdminEditEmployees"
            android:ems="10"
            android:hint="@string/firstNameAdminEditEmployees"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/lastNameAdminAddEmployees"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="16dp"
            android:autofillHints="@string/lastNameAdminEditEmployees"
            android:ems="10"
            android:hint="@string/lastNameAdminEditEmployees"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/emailAdminAddEmployeeEditText"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="16dp"
            android:autofillHints="@string/emailAdminEditEmployees"
            android:ems="10"
            android:hint="@string/emailAdminEditEmployees"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/phoneAdminAddEmployeeEditText"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="16dp"
            android:autofillHints="@string/phoneAdminEditEmployees"
            android:ems="10"
            android:hint="@string/phoneAdminEditEmployees"
            android:inputType="phone" />

        <Button
            android:id="@+id/button"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="@string/addAdminEditEmployeeButton"
            android:textAllCaps="false" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>