<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminLoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textLogAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/textLogAdmin"
            android:textAllCaps="false"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/editTextEmailAdmin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="16dp"
            android:autofillHints="@string/editTextEmailAdmin"
            android:ems="10"
            android:hint="@string/editTextEmailAdmin"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextPasswordAdmin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="28dp"
            android:autofillHints="@string/editTextPassAdmin"
            android:ems="10"
            android:hint="@string/editTextPassAdmin"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/adminLoginButton"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="@string/adminLoginButton"
            android:textAllCaps="false" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>