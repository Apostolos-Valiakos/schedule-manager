<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/textAdminEmployeesView"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/showAdminEmployeesButton"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:text="@string/showAdminEmployeesButton"
            android:layout_gravity="center"
           />

        <Button
            android:id="@+id/editAdminEmployeesButton"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:text="@string/editAdminEmployeesButton"
            android:layout_gravity="center" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>