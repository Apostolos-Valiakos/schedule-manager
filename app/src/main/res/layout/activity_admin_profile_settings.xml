<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminUI.AdminProfileSettings">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/AdminSettingsUsernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Admin_settings_Username_text" />

            <EditText
                android:id="@+id/AdminSettingsUsernameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="@string/Admin_settings_Username_Edit_text"
                android:ems="10"
                android:hint="@string/Admin_settings_Username_Edit_text"
                android:inputType="text" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/AdminSettingsFirstnameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Admin_settings_Firstname_text" />

            <EditText
                android:id="@+id/AdminSettingsFirstNameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="@string/Admin_settings_FirstName_Edit_text"
                android:ems="10"
                android:hint="@string/Admin_settings_FirstName_Edit_text"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/AdminSettingsLastnameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Admin_settings_Lastname_text" />

            <EditText
                android:id="@+id/AdminSettingsLastNameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="@string/Admin_settings_LastName_Edit_text"
                android:ems="10"
                android:hint="@string/Admin_settings_LastName_Edit_text"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/AdminSettingsPasswordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Admin_settings_Password_text" />

            <EditText
                android:id="@+id/AdminSettingsPasswordEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="@string/Admin_settings_Password_Edit_text"
                android:ems="10"
                android:hint="@string/Admin_settings_Password_Edit_text"
                android:inputType="textPassword" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/AdminSettingsDOBText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Admin_settings_Dob_text" />

            <TextView
                android:id="@+id/AdminSettingsChosenDOBText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Admin_settings_chosen_Dob_text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/AdminSettingsChooseDoBButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Admin_settings_Choose_Date_Button" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/AdminSettingsSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="@string/Admin_settings_Save_Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>